<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:padding="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_open_link"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:src="@drawable/info" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/ad_app_icon"-->
                    <!--                    android:layout_width="@dimen/_45sdp"-->
                    <!--                    android:layout_height="@dimen/_45sdp"-->
                    <!--                    android:layout_alignParentStart="true"-->
                    <!--                    android:src="@drawable/ic_launcher_background" />-->

                    <ImageView
                        android:id="@+id/ad_media"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:src="@drawable/ic_launcher_background" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/ad_media"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/re_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RatingBar
                                android:id="@+id/ad_stars"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:stepSize="0.5"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/rl_heading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/ad_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_1sdp"
                                    android:text="Amazon"
                                    android:textColor="#041FCD"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />


                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_15sdp"
                                    android:layout_height="@dimen/_10ssp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:layout_toEndOf="@+id/ad_name"
                                    android:gravity="center"
                                    app:cardBackgroundColor="#F44336">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="AD"
                                        android:textColor="#fff"
                                        android:textSize="@dimen/_8ssp" />
                                </androidx.cardview.widget.CardView>


                            </RelativeLayout>


                            <TextView
                                android:id="@+id/ad_body"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_heading"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:layout_weight="1"
                                android:text="content"
                                android:textSize="@dimen/_8sdp" />
                        </RelativeLayout>


                        <TextView
                            android:id="@+id/ad_call_to_action"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_below="@+id/re_main"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/install_btn"
                            android:textColor="#ffff" />

                    </RelativeLayout>




                </RelativeLayout>

                <TextView
                    android:id="@+id/ad_advertiser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ad_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ad_store"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:visibility="gone" />



            </LinearLayout>

        </RelativeLayout>







    </androidx.cardview.widget.CardView>



</RelativeLayout>